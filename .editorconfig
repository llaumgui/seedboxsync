; EditorConfig is awesome: http://EditorConfig.org
; top-most EditorConfig file
root = true

; Unix-style
[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = false

[*.ini,*.ini.dist]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.md]
indent_size = 4
insert_final_newline = true

[*.py]
indent_size = 4
insert_final_newline = true
